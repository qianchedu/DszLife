<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_outerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:orientation="horizontal"
    tools:context="com.dsz.activity.MainActivity" >

    <com.dsz.view.SlidingLayout
        android:id="@+id/slidingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/menu"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@mipmap/background" >

            <ImageView 
                android:id="@+id/id_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_photo"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="12dp"
                />
            	
            <TextView 
                android:layout_marginTop="58dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="往事随风"
                android:textColor="#f3f3f3"
                android:textSize="16sp"
                android:layout_toRightOf="@+id/id_photo"
                android:layout_marginLeft="14dp"
                android:layout_alignBottom="@+id/id_photo"
                />
            	
            <ImageView 
                android:id="@+id/id_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_model"
                android:layout_marginLeft="36dp"
                android:layout_below="@+id/id_photo"
                android:layout_marginTop="24dp"
                />
            
            
            <TextView
                android:id="@+id/id_mode1"
                android:layout_marginTop="44dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="情景模式"
                android:textColor="#f3f3f3"
                android:textSize="14sp"
                android:layout_below="@+id/id_photo"
                android:layout_toRightOf="@+id/id_model"
                android:layout_marginLeft="14dp"

                />
            
            
            
             <ImageView 
                android:id="@+id/id_monitoring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_monitoring"
                android:layout_marginLeft="36dp"
                android:layout_below="@+id/id_model"
                android:layout_marginTop="18dp"
                />
            
            
               <TextView
                android:id="@+id/monitoring1"
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="监控"
                android:textColor="#f3f3f3"
                android:textSize="14sp"
                android:layout_toRightOf="@+id/id_monitoring"
                android:layout_marginLeft="14dp"
                android:layout_below="@+id/id_mode1"
                />


            <ImageView
                android:id="@+id/id_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_lock"
                android:layout_marginLeft="36dp"
                android:layout_below="@+id/id_monitoring"
                android:layout_marginTop="18dp"
                />


            <TextView
                android:id="@+id/id_lock1"
                android:layout_marginTop="36dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="安防"
                android:textColor="#f3f3f3"
                android:textSize="14sp"
                android:layout_toRightOf="@+id/id_lock"
                android:layout_marginLeft="14dp"
                android:layout_below="@+id/id_monitoring"
                />


            <ImageView
                android:id="@+id/id_family"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_family"
                android:layout_marginLeft="36dp"
                android:layout_below="@+id/id_lock"
                android:layout_marginTop="18dp"
                />


            <TextView
                android:id="@+id/id_family1"
                android:layout_marginTop="42dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="家庭信息"
                android:textColor="#f3f3f3"
                android:textSize="14sp"
                android:layout_toRightOf="@+id/id_family"
                android:layout_marginLeft="14dp"
                android:layout_below="@+id/id_lock1"
                />


            <ImageView
                android:id="@+id/id_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_shop"
                android:layout_marginLeft="36dp"
                android:layout_below="@+id/id_family"
                android:layout_marginTop="18dp"
                />


            <TextView
                android:id="@+id/id_shop1"
                android:layout_marginTop="42dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商城"
                android:textColor="#f3f3f3"
                android:textSize="14sp"
                android:layout_toRightOf="@+id/id_family"
                android:layout_marginLeft="14dp"
                android:layout_below="@+id/id_family1"
                />

            <ImageView
                android:id="@+id/id_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_settings"
                android:layout_marginLeft="36dp"
                android:layout_below="@+id/id_shop"
                android:layout_marginTop="18dp"
                />


            <TextView
                android:id="@+id/id_settings1"
                android:layout_marginTop="42dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textColor="#f3f3f3"
                android:textSize="14sp"
                android:layout_toRightOf="@+id/id_family"
                android:layout_marginLeft="14dp"
                android:layout_below="@+id/id_shop1"
                />








        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#1993e1"
                android:orientation="horizontal" >

                <Button
                    android:layout_width="8dp"
                    android:layout_height="48dp"
                    android:background="#1993e1" />

                <ImageView
                    android:id="@+id/id_toggleMenu"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:background="#1993e1"
                    android:src="@mipmap/icon_list" />

                <Button
                    android:id="@+id/icon_list"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="#1993e1"
                    android:text="首页"
                    android:textColor="#f3f3f3"
                    android:textSize="18sp" />

                <Button
                    android:layout_width="12dp"
                    android:layout_height="48dp"
                    android:background="#1993e1" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp"
                    android:background="#1993e1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="horizontal" >

                <com.dsz.view.ImageCycleView
                    android:id="@+id/ad_view"
                    android:layout_width="match_parent"
                    android:layout_height="180dp" >
                </com.dsz.view.ImageCycleView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/LinearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/id_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:src="@mipmap/icon_home" />

                    <ImageView
                        android:id="@+id/id_health"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="22dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:src="@mipmap/icon_health" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="居家"
                        android:textColor="#282828"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="22dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="健康"
                        android:textColor="#282828"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/id_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:src="@mipmap/icon_data" />

                    <ImageView
                        android:id="@+id/id_recreation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="22dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:src="@mipmap/icon_recreation" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="17dp"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="数据"
                        android:textColor="#282828"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="17dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="22dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="娱乐"
                        android:textColor="#282828"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.dsz.view.SlidingLayout>

</LinearLayout>